<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.iamaravind.dhishnareg.CheckinsuccessActivity">

    <include
        android:id="@+id/tolbar"
        layout="@layout/tool_bar"
        >
    </include>

    <TextView
        android:id="@+id/success"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="137dp"
        android:textSize="32sp" />

    <Button
        android:id="@+id/back2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_custom"
        android:backgroundTint="@android:color/holo_red_dark"
        android:elevation="10dp"
        android:text="Back 2 Scan"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="68dp" />

    <TextView
        android:id="@+id/chs_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="22sp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:id="@+id/chs_college"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="22sp"
        android:layout_below="@+id/chs_name"
        android:layout_alignStart="@+id/chs_name"
        android:layout_marginTop="71dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/chs_name"
        android:layout_marginStart="64dp"
        android:text="Name : "
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_alignTop="@+id/chs_college"
        android:text="College : "
        android:textSize="22sp" />
</RelativeLayout>
