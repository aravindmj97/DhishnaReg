<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.iamaravind.dhishnareg.CheckinfailedActivity">

    <include
        android:id="@+id/tolbar"
        layout="@layout/tool_bar"
        >
    </include>
    <TextView
        android:id="@+id/fail"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:textSize="32sp" />

    <Button
        android:id="@+id/back2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="102dp"
        android:background="@drawable/button_custom"
        android:backgroundTint="@android:color/holo_red_dark"
        android:elevation="10dp"
        android:text="Back 2 Scan"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name : "
        android:textSize="22sp"
        android:layout_above="@+id/date_time"
        android:layout_toStartOf="@+id/back2"
        android:layout_marginBottom="42dp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/back2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="6dp"
        android:text="Checkin : "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        android:textSize="22sp"
        android:layout_alignBaseline="@+id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_alignStart="@+id/back2"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        android:textSize="22sp"
        android:layout_marginStart="15dp"
        android:layout_alignTop="@+id/time"
        android:layout_toEndOf="@+id/time" />
</RelativeLayout>
